s=\"play-btn\" @click=\"toggleVideoPlay\">▶</div>\r\n    </div>\r\n\r\n    <!-- 标题栏 -->\r\n    <div class=\"title-bar\">\r\n      <div class=\"title-content\">\r\n        <div class=\"main-title\">江姐生平事迹陈列展主馆</div>\r\n        <div class=\"tags\">红色教育基地 · 沉浸式展馆 | 自贡名片</div>\r\n      </div>\r\n      <div class=\"rating\">★★★★★</div>\r\n    </div>\r\n\r\n    <!-- 优惠横幅 -->\r\n    <div class=\"banner\">\r\n      开通自贡文旅一卡通，预估此次出行共可节省\r\n      <span class=\"discount\">99元</span>\r\n    </div>\r\n\r\n    <!-- 预约详情卡片 -->\r\n    <div class=\"booking-card\">\r\n      <div class=\"card-header\">\r\n        预约详情\r\n        <span class=\"sub-header\">当前场馆:江姐生平事迹陈列展主馆</span>\r\n      </div>\r\n      <div class=\"tab-nav\">\r\n        <div class=\"tab\" :class=\"{ active: activeTab === 'date' }\" @click=\"activeTab = 'date'\">行程日期</div>\r\n        <div class=\"tab\" :class=\"{ active: activeTab === 'goods' }\" @click=\"activeTab = 'goods'\">场馆商品</div>\r\n        <div class=\"tab\" :class=\"{ active: activeTab === 'other' }\" @click=\"activeTab = 'other'\">其他旅程</div>\r\n      </div>\r\n      <!-- 可滚动内容区域 -->\r\n      <div class=\"booking-scroll-content\">\r\n        <div class=\"date-select\">\r\n          <div class=\"date-header\">\r\n            <div>当前选择<img src=\"../imgs/日历（mb）.png\"></div>\r\n            <select class=\"month-select\">\r\n              <option value=\"2024-10\">2024-10月</option>\r\n              <option value=\"2024-11\">2024-11月</option>\r\n              <option value=\"2024-12\">2024-12月</option>\r\n              <option value=\"2025-01\">2025-01月</option>\r\n            </select>\r\n          </div>\r\n          <div class=\"date-grid\">\r\n            <div class=\"date-item sold-out\">售罄</div>\r\n            <div class=\"date-item\" :class=\"{ active: selectedDate === '10.04' }\" @click=\"selectDate('10.04')\">周五SAT<br />10.04</div>\r\n            <div class=\"date-item\" :class=\"{ active: selectedDate === '10.05' }\" @click=\"selectDate('10.05')\">周六SAT<br />10.05</div>\r\n            <div class=\"date-item\" :class=\"{ active: selectedDate === '10.06' }\" @click=\"selectDate('10.06')\">周日SUN<br />10.06</div>\r\n          </div>\r\n          <div class=\"time-select\">\r\n            <div class=\"time-label\">预计时间<img src=\"../imgs/闹钟（mb）.png\" alt=\"\"></div>\r\n            <div class=\"time-grid\">\r\n              <div class=\"time-item\" :class=\"{ active: selectedTime === '10:00 am' }\" @click=\"selectTime('10:00 am')\">10:00 am</div>\r\n              <div class=\"time-item\" :class=\"{ active: selectedTime === '11:00 am' }\" @click=\"selectTime('11:00 am')\">11:00 am</div>\r\n              <div class=\"time-item\" :class=\"{ active: selectedTime === '12:00 pm' }\" @click=\"selectTime('12:00 pm')\">12:00 pm</div>\r\n              <div class=\"time-item\" :class=\"{ active: selectedTime === '01:00 pm' }\" @click=\"selectTime('01:00 pm')\">01:00 pm</div>\r\n            </div>\r\n          </div>\r\n          <div class=\"person-select\">\r\n            <div class=\"person-label\">同行人员<img src=\"../imgs/同行人员（mb）.png\" alt=\"\"></div>\r\n            <div class=\"person-grid\">\r\n              <div class=\"person-item\" :class=\"{ active: selectedPerson === 1 }\" @click=\"selectPerson(1)\">1人</div>\r\n              <div class=\"person-item\" :class=\"{ active: selectedPerson === 2 }\" @click=\"selectPerson(2)\">2人</div>\r\n              <div class=\"person-item\" :class=\"{ active: selectedPerson === 3 }\" @click=\"selectPerson(3)\">3人</div>\r\n              <div class=\"person-item\" :class=\"{ active: selectedPerson === 4 }\" @click=\"selectPerson(4)\">4人</div>\r\n              <div class=\"person-item\" :class=\"{ active: selectedPerson === 5 }\" @click=\"selectPerson(5)\">5人</div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n      <!-- 固定的合计栏 -->\r\n      <div class=\"total-bar fixed\">\r\n        <div class=\"total-info\">\r\n          <div class=\"price\">合计:¥{{ totalPrice.toFixed(2) }}</div>\r\n          <div class=\"discount\">\r\n            优惠减:¥10.00\r\n            <a href=\"#\" class=\"discount-detail\">优惠明细</a>\r\n          </div>\r\n        </div>\r\n        <button class=\"booking-btn\" @click=\"showModal = true\">立即预约({{ selectedPerson }})</button>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 预约成功弹窗 -->\r\n    <div class=\"modal\" v-if=\"showModal\" @click.self=\"closeModal\">\r\n      <div class=\"modal-content\">\r\n        <div class=\"modal-icon\">✓</div>\r\n        <div class=\"modal-title\">恭喜您,预约成功</div>\r\n        <div class=\"modal-buttons\">\r\n          <button class=\"modal-btn primary\" @click=\"closeModal\">前去查看</button>\r\n          <button class=\"modal-btn secondary\" @click=\"closeModal\">取消预约</button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"BookingPage\",\r\n  data() {\r\n    return {\r\n      showModal: false,\r\n      activeTab: \"date\",\r\n      selectedDate: \"10.04\",\r\n      selectedTime: \"11:00 am\",\r\n      selectedPerson: 1,\r\n      basePrice: 30.00,\r\n      discount: 10.00,\r\n      videoPlaying: false  // 新增：视频播放状态\r\n    };\r\n  },\r\n  computed: {\r\n    totalPrice() {\r\n      return (this.selectedPerson * this.basePrice) - this.discount;\r\n    }\r\n  },\r\n  methods: {\r\n    // 新增：视频播放/暂停切换\r\n    toggleVideoPlay() {\r\n      const video = this.$refs.videoPlayer;\r\n      if (video) {\r\n        if (this.videoPlaying) {\r\n          video.pause();\r\n          this.videoPlaying = false;\r\n        } else {\r\n          video.play();\r\n          this.videoPlaying = true;\r\n        }\r\n      }\r\n    },\r\n    // 原有方法保持不变\r\n    closeModal() {\r\n      this.showModal = false;\r\n    },\r\n    selectDate(date) {\r\n      this.selectedDate = date;\r\n    },\r\n    selectTime(time) {\r\n      this.selectedTime = time;\r\n    },\r\n    selectPerson(num) {\r\n      this.selectedPerson = num;\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* 移动端基础样式 - 新增/修改视频区域样式 */\r\n.booking-page {\r\n  margin: 0;\r\n  padding: 0;\r\n  box-sizing: border-box;\r\n  font-family: \"Microsoft Yahei\", sans-serif;\r\n  background-color: #f5f0e6;\r\n  color: #333;\r\n  width: 100%;\r\n  min-height: 100vh;\r\n}\r\n\r\n/* 修复视频容器样式 */\r\n.video-section {\r\n  position: relative;\r\n  width: 100%;\r\n  height: 280px;\r\n  overflow: hidden;  /* 防止视频溢出 */\r\n}\r\n/* 视频播放器样式 */\r\n.video-player {\r\n  width: 100%;\r\n  height: 100%;\r\n  object-fit: cover;  /* 和原图片样式保持一致 */\r\n  background-color: #000;  /* 视频加载前显示黑色背景 */\r\n}\r\n/* 播放按钮样式（位置不变） */\r\n.play-btn {\r\n  position: absolute;\r\n  top: 50%;\r\n  left: 50%;\r\n  transform: translate(-50%, -50%);\r\n  width: 80px;\r\n  height: 80px;\r\n  background: rgba(255,255,255,0.9);\r\n  border-radius: 50%;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  font-size: 30px;\r\n  color: #a62b28;\r\n  cursor: pointer;\r\n  z-index: 10;  /* 确保按钮在视频上方 */\r\n}\r\n/* 原生CSS的hover效果（替换&:hover） */\r\n.play-btn:hover {\r\n  opacity: 0.9;\r\n}\r\n\r\n.title-bar {\r\n  background-color: #a62b28;\r\n  color: white;\r\n  padding: 12px 16px;\r\n  font-size: 16px;\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n.title-content .main-title {\r\n  font-size: 16px;\r\n  font-weight: bold;\r\n}\r\n.title-content .tags {\r\n  font-size: 12px;\r\n  opacity: 0.9;\r\n  margin-top: 4px;\r\n}\r\n.rating {\r\n  color: #ffd700;\r\n}\r\n\r\n.banner {\r\n  background-color: #fff2cc;\r\n  padding: 10px 16px;\r\n  text-align: center;\r\n  font-size: 14px;\r\n  color: #b7791f;\r\n}\r\n.banner .discount {\r\n  color: #a62b28;\r\n  font-weight: bold;\r\n}\r\n\r\n.booking-card {\r\n  width: 100%;\r\n  padding: 20px;\r\n  margin: 16px 0;\r\n  background: #fff;\r\n  border-radius: 8px;\r\n  box-shadow: 0 2px 8px rgba(0,0,0,0.1);\r\n  position: relative;\r\n  /* 关键：卡片底部预留高度正好等于合计栏高度，初始时挡住同行人员网格 */\r\